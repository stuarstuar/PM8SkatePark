    const password2 = $("#password2").val();
    const anos_experiencia = $("#anos_experiencia").val();
    const especialidad = $("#especialidad").val();
    //const foto = $("#foto").files[0];
    //const name_foto = foto.name


    const payload = {
      email, nombre, password, password2
      , anos_experiencia, especialidad}
